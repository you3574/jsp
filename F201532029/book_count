CREATE DEFINER=`root`@`localhost` PROCEDURE `book_count`(
  IN ss VARCHAR(10),
  IN st NVARCHAR(100)
)
BEGIN

SELECT COUNT(b.id)
FROM book b
  LEFT JOIN category c ON c.id = b.categoryId
WHERE 
  ( ss = '0' ) OR
  ( ss = '1' AND b.title LIKE CONCAT('%',st, '%') ) OR
  ( ss = '2' AND c.categoryName LIKE CONCAT(st) );

END